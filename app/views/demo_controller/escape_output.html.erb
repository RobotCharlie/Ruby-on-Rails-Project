<% evil_string = " <script> alert('Gotcha!');</script>".html_safe %>
<% good_string = " <strong> Welcome to my site! </strong>" %>
<!--<script> alert('Gotcha!');</script>-->

<%#= raw(evil_string)%><br/>
<%#= raw(good_string)%><br/>

<%= evil_string.html_safe?%><br/>
<%= good_string.html_safe?%><br/>


<%#= h(evil_string)%><br/>   <!--h() won't protect, coz evil_string already been labed html_safe-->

<hr />
<% simple_string = "<strong>Please</strong> visit <a href = 'http://www.subaru.ca'>us.</a>" %>
<%= strip_links(simple_string)%>
<%= strip_tags(simple_string)%>

<hr />
<%= sanitize(evil_string)%><br/>
<%= sanitize(simple_string)%><br/> <!--will not do anything without giving any options(whitelist)-->
<%= sanitize(simple_string, :tags =>["strong", "em", "a"])%><br/> <!--no options means only JS has been blocked-->
<%= sanitize(simple_string, :tags => [])%><br/> <!--we allow anything through-->